datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Role {
  id          Int     @id @default(autoincrement())
  active      Boolean @default(true)
  name        String
  description String?
  users       User[]
  permissions Json?
}

model User {
  active Boolean @default(true)
  id     Int     @id @default(autoincrement())
  email  String  @unique
  name   String?
  phone  String?
  role   Role?   @relation(fields: [roleId], references: [id])
  roleId Int?
}

generator docs {
  provider = "node node_modules/prisma-docs-generator"
}
